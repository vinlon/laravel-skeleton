{
  "name": "vinlon/laravel-skeleton",
  "type": "project",
  "description": "The Laravel Framework Skeleton",
  "keywords": [
    "framework",
    "laravel",
    "skeleton"
  ],
  "license": "MIT",
  "require": {
    "php": "^7.2.5|^8.0",
    "fideloper/proxy": "^4.4",
    "fruitcake/laravel-cors": "^2.0",
    "guzzlehttp/guzzle": "^6.3.1|^7.0.1",
    "laravel/framework": "^7.29",
    "laravel/tinker": "^2.5",
    "vinlon/laravel-sql-logger": "^0.1"
  },
  "require-dev": {
    "barryvdh/laravel-ide-helper": "^2.8",
    "brainmaestro/composer-git-hooks": "^2.8",
    "facade/ignition": "^2.0",
    "fakerphp/faker": "^1.9.1",
    "friendsofphp/php-cs-fixer": "^2.17",
    "mockery/mockery": "^1.3.1",
    "nunomaduro/collision": "^4.3",
    "phpunit/phpunit": "^8.5.8|^9.3.3"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "classmap": [
      "database/seeds",
      "database/factories"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "laravel": {
      "dont-discover": []
    },
    "hooks": {
      "pre-push": [
        "composer check-style"
      ],
      "pre-commit": [
        "scripts/fix-staged-php-files"
      ]
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ],
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
      "@php -r \"file_exists('scratch.php') || copy('_scratch.php', 'scratch.php');\"",
      "git init",
      "cghooks add --ignore-lock",
      "cghooks update"
    ],
    "post-update-cmd": [
      "cghooks update"
    ],
    "cghooks": "vendor/bin/cghooks",
    "check-style": "vendor/bin/php-cs-fixer fix --using-cache=no --diff --dry-run --ansi",
    "fix-style": "vendor/bin/php-cs-fixer fix --using-cache=no --ansi",
    "ide-helper": "php artisan ide-helper:model -M"
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://mirrors.aliyun.com/composer/"
    }
  }  
}
